<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Plastic Footprint</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <img class="bg" src="~/Images/SeaBackground.jpg" />

    <div class="top_right"> <img src="~/Images/MPFLogo.png" style="width:250px" onclick="openNav()" z-index:999 /></div>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="overlay-content">
            <a>@Html.ActionLink("Home", "Index", "Home")</a>
            <a>@Html.ActionLink("Calculator", "Intro", "Calculator")</a>
            <a>@Html.ActionLink("Alternatives", "Alternatives", "Alternatives")</a>
            <a>@Html.ActionLink("Projects", "Projects", "Projects")</a>
            <a>@Html.ActionLink("Links", "Links", "Links")</a>
        </div>
    </div>



    <div class="container body-content" id="body-content">
        <img class="bg" src="~/Images/SeaBackground.jpg" />
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        /* Set the width of the side navigation to 250px and the left margin of the page content to 250px and add a black background color to body */
        function openNav() {
            document.getElementById("mySidenav").style.width = "260px";
            document.getElementById("body-content").style.marginLeft = "260px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.4)";
        }

        /* Set the width of the side navigation to 0 and the left margin of the page content to 0, and the background color of body to white */
        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("body-content").style.marginLeft = "0";
            document.body.style.backgroundColor = "white";
        }
    </script>

</body>
</html>



