<table class="table" style="width:100%"">


    @foreach (var item in Model)
    {

        <tr>
            <td style="width:30%">
                <br /><image src=@item.Image.ToString() width="100%"></image>
            </td>
            <td style="width:10%">
                
            </td>
            <td style="width:50%;vertical-align:middle;text-align:left">
                <h2><b>@item.Name</b></h2>
                <p style="font-size : x-large ">
                        @Html.DisplayFor(modelItem => item.Description)
                </p>
            </td>
            <td style="vertical-align:bottom">
                <p>
                    <a class="btn btn-default" onClick="return confirm('This will take you to an external site')" style="margin: 5px" href=@item.LinkUrl target="_blank">
                        Go to Project
                    </a>
                </p>
            </td>

            <!-- add this when there is an administrator that wants to
                work on links using the webpage
