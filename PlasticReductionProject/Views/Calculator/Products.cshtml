@model IEnumerable<PlasticReductionProject.Models.Product>
@{
    ViewBag.Title = "Products";
}
<img class="bg" src="~/Images/SeaBackground.jpg" />
<h2>Products</h2>

<table>
    @if (Model.Count() > 0)
    {
        var counter = 1;
        <tr>
            @foreach (var item in Model)
            {

                if (counter % 2 > 0)
                {

                    <td>
                        <h3>@item.Description</h3>
                        <img src=@item.Image.ToString() width="50%" height="50%" />
                        <br />
                    </td>
                }
                else
                {
                    <td>
                        <br />
                        <img src=@item.Image.ToString() width="50%" height="50%" />
                        <h3>@item.Description</h3>
                    </td>
                    @Html.Raw("</tr><tr>")
                }
                counter += 1;
            }
        </tr>
        <tr>
            <td>
                <span class="btn btn-default" style="margin: 5px">
                    @Html.ActionLink("Back", "Calculator", "Calculator")
                </span>
            </td>
        </tr>
    }


</table>