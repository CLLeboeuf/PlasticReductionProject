@model IEnumerable<PlasticReductionProject.Models.ProductResult>
@{
    ViewBag.Title = "View";
}

<h2>Calculator</h2>

<p align="left">
    <span class="btn btn-default" style="margin: 5px">
        @Html.ActionLink("Generate Report", "Report", "Calculator")
    </span>
</p>

<p align="left">
    <span class="btn btn-default" style="margin: 5px">
        @Html.ActionLink("Test Products", "Products", "Calculator")
    </span>
</p>

<p align="left">
    <span class="btn btn-default" style="margin: 5px">
        @Html.ActionLink("Test Plastic Types", "PlasticTypes", "Calculator")
    </span>
</p>

@foreach (var item in Model)
{
    Html.RenderPartial("~/Views/Shared/_Question1PartialView.cshtml", item);
    Html.RenderPartial("~/Views/Shared/_Question2PartialView.cshtml", item);
    Html.RenderPartial("~/Views/Shared/_Question3PartialView.cshtml", item);
}