@model IEnumerable<PlasticReductionProject.Models.PlasticAlternative>


@{
    ViewBag.Title = "Alternatives";
}

<br />
<br />
<br />
<br />
<br />



<div class="result">
    <div style="background-image: url('../../images/turtlePlasticbagDark.jpg'); background-repeat: no-repeat; background-size: cover;">
        @if (Model != null && Model.Count() > 0)
        {
            if (Model.Count() > 0)
            {<p class="hero-heading" align="center">
                Here are some alternatives to a @ViewBag.SubProduct
            </p>
                <br />
                <table width="60%" align="center" border="1" style="padding:5px,5px,5px,5px">

                    @{var counter = 1;
                    }
                    <tr>
                        @foreach (var item in Model)
                        {

                            if (counter % 2 > 0)
                            {
                                <td class="altTD" style="background-image:url(@item.Image.ToString());">
                                    <span class="resultBackground2" style="margin: 5px">
                                        @item.Description
                                    </span>

                                </td>
                            }
                            else
                            {
                                <td class="altTD" style="background-image:url(@item.Image.ToString());">
                                    <span class="resultBackground2" style="margin: 5px">
                                        @item.Description
                                    </span>
                                </td>
                                @Html.Raw("</tr><tr>")
                            }
                            counter += 1;
                        }
                    </tr>
                    <tr>
                        <td colspand="2" align="center">
                            <span class="btn btn-default" style="margin: 5px">
                                @Html.ActionLink("Find alternatives to more products", "Alternatives", "Alternatives")
                                @Html.ActionLink("Find projects for your community", "Projects", "Projects")
                                @Html.ActionLink("Do more research", "Links", "Links")
                            </span>
                        </td>
                        </tr>
                    <tr>
                        <td colspand="2" align="center">
                            <span class="btn btn-default" style="margin: 5px">
                                @Html.ActionLink("Or calculate your footprint again", "Calculator", "Calculator")
                            </span>
                        </td>
                    </tr>
                </table>
                            }
                        }
                        else
                        {
                            <p class="hero-heading" align="center">
                                @ViewBag.AltText
                            </p>
                            <p class="hero-heading" align="center">
                                @ViewBag.AltText2
                            </p><br /><br />
                            <p class="hero-heading" align="center">

                                You can find alternatives for other popular products <br />
                                <span class="btn btn-default" style="margin: 5px"> @Html.ActionLink("Here", "Alternatives", "Alternatives")</span>
                            </p>
                    }
                

            </div>
</div>