@model IEnumerable<PlasticReductionProject.Models.PlasticAlternative>


@{
    ViewBag.Title = "Alternatives";
}


<div style="position:relative; top:130px;">
    <div class="result">
        @if (Model != null && Model.Count() > 0)
        {
            if (Model.Count() > 0)
            {<p class="hero-heading" align="center">
                    Here are some alternatives to @ViewBag.SubProduct
                </p>
                <br />
                <table width="60%" align="center">

                    @{var counter = 1;
                    }
                    <tr>
                        @foreach (var item in Model)
                        {

                            if (counter % 2 > 0)
                            {
                                <td class="altTD" style="background-image: url( @item.Image.ToString() );background-size: contain;background-repeat: repeat-x">
                                    <p>
                                        <span class="resultBackground2" style="margin: 5px">
                                            @item.Description

                                        </span>
                                    </p>
                                </td>
                                <td width="2%"></td>
                            }
                            else
                            {
                                <td class="altTD" style="background-image: url( @item.Image.ToString() );background-size: contain;background-repeat: repeat-x">
                                    <p>
                                        <span class="resultBackground2" style="margin: 5px">
                                            @item.Description
                                        </span>
                                    </p>
                                </td>
                                @Html.Raw("</tr><tr>")
                                <td height="20px"></td>
                                <td height="20px"></td>
                                <td height="20px"></td>
                                @Html.Raw("</tr><tr>")
                            }
                            counter += 1;
                        }
                    </tr>
                    <tr>
                </table>
                <table align="center">
                    <tr>
                        <td align="center">
                            <span style="margin: 5px">
                                @Html.ActionLink("Calculate your footprint again", "Calculator", "Calculator", null, new { @class = "btn btn-default" })
                            </span>
                        </td>
                    </tr>
                </table>
            }
        }
        else
        {
            <p class="hero-heading" align="center">
                @ViewBag.AltText
            </p>
            <p class="hero-heading" align="center">
                @ViewBag.AltText2
            </p><br /><br />
            <br /><br />
            <p align="center">
                <span style="margin: 5px">
                    @Html.ActionLink("Calculate your footprint again", "Calculator", "Calculator", null, new { @class = "btn btn-default" })
                </span>
            </p>
        }


    </div>
</div>
