@model IEnumerable<PlasticReductionProject.Models.PlasticAlternative>


@{
    ViewBag.Title = "Alternatives";
}

<h2>Here are some alternatives for @ViewBag.Product</h2>
<br />
<table>

    @if (Model.Count() > 0)
    {
        var counter = 1;
        <tr>
        @foreach (var item in Model)
        {

            if (counter % 2 > 0)
            {

                <td>
                    <h3>@item.Description</h3>
                    <img src=@item.Image.ToString() width="50%" height="50%"/>
                    <br />
                </td>
            }
            else
            {
                <td>
                    <br />
                    <img src=@item.Image.ToString() width="50%" height="50%"/>
                    <h3>@item.Description</h3> 
                </td>
                @Html.Raw("</tr><tr>")
            }
            counter += 1;
        }
        </tr>
    }

</table>


